<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="20px"
        android:background="@drawable/backgrnd"
        android:ems="10"
        android:padding="5px"
        android:text="Enter event details"
        android:gravity="center"
        android:textColor="#54A4DE" />

    <EditText
        android:id="@+id/title"
        android:layout_width="290dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_x="14px"
        android:layout_y="34px"
        android:hint="Event Title"
        android:textSize="16sp" >
    </EditText>

    <EditText
        android:id="@+id/food"
        android:layout_width="290dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Free Food"
        android:textSize="16sp" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp" >

        <EditText
            android:id="@+id/location"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Location"
            android:textSize="16sp" />

        <Button
            android:id="@+id/locationButton"
            android:layout_width="165dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/location"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/location"
            
            android:text="@string/locationString" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="305dp"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/selectedDateLabel"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Select Date"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/defaultDateSelectButton"
            android:layout_width="165dp"
            android:layout_height="34dp"
            android:layout_alignTop="@+id/selectedDateLabel"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/selectedDateLabel"
            android:text="SelectDate" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="305dp"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/selectedStartTime"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Select Time"
            android:textSize="16sp" />

        <Button
            android:id="@+id/timeSelectButton"
            android:layout_width="165dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/selectedStartTime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/selectedStartTime"
            android:text="Start Time" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="305dp"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/selectedEndTime"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="End Time"
            android:textSize="16sp" />

        <Button
            android:id="@+id/endtimeSelectButton"
            android:layout_width="166dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/selectedEndTime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/selectedEndTime"
            android:text="End Time" />
    </RelativeLayout>

    <EditText
        android:id="@+id/description"
        android:layout_width="290dp"
        android:layout_height="34dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Description"
        android:maxLines="3"
        android:textSize="16sp" />

    <Button
        android:id="@+id/create"
        android:layout_width="240px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custombutton"
        android:gravity="center"
        android:text="Create Event"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:typeface="sans" />

</LinearLayout>
